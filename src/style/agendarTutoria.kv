MDScreen:
    name:"agendarTutoria"
    md_bg_color: [1,0.98,0.91]
    MDCard:
        orientation: "vertical"
        padding: 0, 0, 0 , "36dp"
        size_hint: .95, .95
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 4
        md_bg_color:[0.66,0.82,0.73]
        MDFloatLayout:
            MDRectangleFlatIconButton:
                text: "Cancelar"
                text_color:"white"
                icon: "close-box"
                icon_color:"white"
                line_color:(0,0,0,0)
                font_name:"zapf"
                size_hint: .8, .02
                md_bg_color: [0.8,0.62,0.37]
                pos_hint: {"center_x": 0.5, "center_y": 0.09}
                on_release:
                    root.manager.transition.direction="right"
                    root.manager.current="Inicio"
            Image:
                source: "images/logoucentral.png"
                size_hint: 0.8, 0.8
                pos_hint: {"center_x":.50,"center_y": 0.93}

            MDTextField:
                id:asignatura
                pos:(60,600)
                size_hint_x: .75
                hint_text: "Asignatura"
                on_focus: if self.focus: app.menu_subject.open()

            MDTextField:
                id: tutor
                pos:(-6000,200)
                size_hint_x: .75
                hint_text: "Tutor"
                on_focus: if self.focus: app.menu_tutor.open()

            MDTextField:
                id:schedule
                pos:(-6000,200)
                size_hint_x: .75
                hint_text: "Horario"
                on_focus: if self.focus: app.menu_schedule.open()

            MDTextField:
                id: aula
                pos:(-6000,200)
                size_hint_x: .75
                hint_text: "Aula"
                on_focus: if self.focus: app.menu_aula.open()
            MDRectangleFlatIconButton:
                id:confirmtutoria
                text: "Confirmar tutor√≠a"
                text_color:"white"
                icon: "notebook-check-outline"
                icon_color:"white"
                line_color:(0,0,0,0)
                font_name:"zapf"
                size_hint: .8, .02
                md_bg_color: [0.42,0.64,0.54]
                pos_hint: {"center_x": 0.5, "center_y": 0.15}
                on_release:app.create_tutorship()